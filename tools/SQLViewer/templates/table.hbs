{{!
    Render a resulting table. Can be either a whole DB table or a table generated by a query result.
    @param {Boolean} isQuery Whether the table is a query result.
    @param {Integer} id The ID of this instance of the tool.
    @param {Integer} number The number of the query.
    @param {String} tableName The name of the DB table. In case of query, the whole query.
    @param {Integer} numberOfRows The number of rows in the table.
    @param {Array<String>} columnNames The names of the columns in the resulting table.
    @param {Array<String>} rows The contents of each row in the table.
}}
{{#if isQuery}}
    <div id='query-{{id}}-{{number}}' class='query-name-container'>{{tableName}}</div>
{{else}}
    <p>{{tableName}} ({{numberOfRows}} row{{#ifCond numberOfRows '!==' 1}}s{{/ifCond}})</p>
{{/if}}
{{#if numberOfRows}}
    <table>
        <tr>
            {{#each columnNames}}<th>{{this}}</th>{{/each}}
        </tr>
        {{#each rows}}
            <tr>
                {{#each this}}
                    {{#ifCond this '===' null}}
                        <td><span class='null'>NULL</span></td>
                    {{else}}
                        <td>{{../this}}</td>
                    {{/ifCond}}
                {{/each}}
            </tr>
        {{/each}}
    </table>
{{/if}}
